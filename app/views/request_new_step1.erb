<style>
	#flash {
			position: absolute;
			font-size: 24px;
			text-align: center;
			color:red;
			font-weight: bold;
			font-style: italic;
			top: 57%;
			left: 25%;
			}
	select {
			position: absolute;
			display: block;
			margin-left: auto;
			margin-right: auto;
			font-size: 24px;
			text-align: center;
			left: 41%;
			top: 35%;
			width: 250px;
			height: 130px;
			}
	div h2 {text-align:center}
	#proceed{
					position: absolute;
					display: block;
					margin-left: auto;
					margin-right: auto;
					font-size: 24px;
					text-align: center;
					top: 53%;
					left: 47%;
					}
	#include {
				position: absolute;
				left:40%;
			}
</style>

<div>
	<h2>Please select the job titles or add a new option</h2>

	<form id="include" action="/<%=@user.username%>/add_title" method="post">
		<label for="title_name">Include:</label>
		<input type="text" name="title_name" placeholder="e.g. Project Manager">
		<input type="submit" value="add">
	</form>
</div>
<div>
	<form action="/<%=@user.username%>/requests/new" method='post'>
		<select name="job_titles[]" size="<%=@user.job_title_selections.count%>" multiple>
			<%@user.job_title_selections.each do |title|%>
				<option><%=title.title_select%></option>
			<%end%>
		</select>
		<input id="proceed" type="submit" value="Proceed">
		<div id="flash">
			<%if !!flash[:error]%>
				<%=flash[:error]%>
			<%end%>
		</div>
	</form>

</div>