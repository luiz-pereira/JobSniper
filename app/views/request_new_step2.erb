<style>

	#select_include {
		position: absolute;
		left: 36%;
		top:25%;
		font-size: 24px;
		width: 10%;
	}

	#include {
		position: absolute;
		left:32%;
	}

	#select_exclude {
		position: absolute;
		left: 58%;
		top: 25%;
		font-size: 24px;
		width: 10%;
	}

	#exclude {
		position: absolute;
		left:54%;
	}

	#submit {
		position: absolute;
		left: 48%;
		top: 45%;
		font-size: 1.5em;

	}
	#delete_include {
		position: absolute;
		left: 37%;
		top: 42%;
		font-size: 16px;
	}

	#delete_exclude {
		position: absolute;
		left: 59%;
		top: 42%;
		font-size: 16px;
	}
</style>

<div>
	<form id="include" action="/<%=@user.username%>/requests/new/<%=@reqest.id%>/include" method="post">
		<label for="expression">Include:</label>
		<input type="text" name="expression" placeholder="any expression">
		<input type="submit" value="add">
	</form>
	<form id="exclude" action="/<%=@user.username%>/requests/new/<%=@reqest.id%>/exclude" method="post">
		<label for="expression">Exclude:</label>
		<input type="text" name="expression" placeholder="any expression">
		<input type="submit" value="add">
	</form>



	<form action="/<%=@user.username%>/requests/<%=@reqest.id%>" method="post">
		<input type="submit" id="submit" value=">> Make Request">
	</form>

	<form action="/<%=@user.username%>/requests/<%=@reqest.id%>/include" method="post">
		<input type="hidden" name="_method" value="delete">
		<select id="select_include" name="include" multiple>
		<%@include.each do |inc|%>
			<option value="<%=inc.id%>"><%=inc.criteria%></option>
		<%end%>
		</select>
		<input type="submit" id="delete_include" value="delete selected">
	</form>

	<form action="/<%=@user.username%>/requests/<%=@reqest.id%>/exclude" method="post">
		<input type="hidden" name="_method" value="delete">
		<select id="select_exclude" name="exclude" multiple>
			<%@exclude.each do |exc|%>
				<option value="<%=exc.id%>"><%=exc.criteria%></option>
			<%end%>
		</select>
		<input type="submit" id="delete_exclude" value="delete selected">
	</form>

</div>